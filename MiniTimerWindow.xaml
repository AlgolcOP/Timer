<Window x:Class="Timer.MiniTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Timer"
        Width="320" Height="160"
        MinWidth="280" MinHeight="140"
        Background="#464C5B"
        FontFamily="Microsoft YaHei"
        Foreground="White"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="MiniButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#415A71" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A6B84" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#364D61" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExitButtonStyle" TargetType="Button" BasedOn="{StaticResource MiniButtonStyle}">
            <Setter Property="Background" Value="#D73A49" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CB2431" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B52D3A" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#464C5B"
            CornerRadius="8"
            BorderBrush="#415A71"
            BorderThickness="2">

        <Viewbox Stretch="Uniform" Margin="8">
            <Grid Width="320" Height="160">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#415A71"
                        CornerRadius="3"
                        Width="20"
                        Height="20"
                        Margin="8,8,0,0"
                        MouseLeftButtonDown="DragHandle_MouseLeftButtonDown"
                        Cursor="SizeAll"
                        ToolTip="Drag"
                        Panel.ZIndex="10">
                    <Ellipse Width="6" Height="6" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="TitleText" Grid.Row="0"
                               Text="Timer"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,5" />

                    <TextBlock x:Name="TimeDisplay" Grid.Row="1"
                               Text="00:00:00"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center" />
                </Grid>

                <Grid Grid.Row="1" Margin="0,5,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="ToggleButton" Grid.Column="0"
                            Style="{StaticResource MiniButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="ToggleButton_Click">
                        <Path x:Name="ToggleIcon"
                              Fill="White"
                              Width="12"
                              Height="12"
                              Stretch="Uniform"
                              Data="M8,5.14V19.14L19,12.14L8,5.14Z" />
                    </Button>

                    <Button x:Name="StopButton" Grid.Column="1"
                            Style="{StaticResource MiniButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="StopButton_Click">
                        <Path Fill="White"
                              Width="12"
                              Height="12"
                              Stretch="Uniform"
                              Data="M6,6H18V18H6V6Z" />
                    </Button>

                    <Button x:Name="ReturnButton" Grid.Column="2"
                            Content="返回"
                            Style="{StaticResource MiniButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="ReturnButton_Click" />

                    <Button x:Name="ExitButton" Grid.Column="3"
                            Content="退出"
                            Style="{StaticResource ExitButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="ExitButton_Click" />
                </Grid>
            </Grid>
        </Viewbox>
    </Border>
</Window>