<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="计时器工具" Height="600" Width="1000"
        Background="#464C5B"
        FontFamily="Microsoft YaHei"
        FontSize="14"
        Foreground="White">

    <Window.Resources>
        <!-- 自定义滚动条样式 -->
        <Style x:Key="CustomScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false" />
            <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
            <Setter Property="Width" Value="3" />
            <Setter Property="MinWidth" Value="3" />
            <Setter Property="MaxWidth" Value="3" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#4A6B84" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Width="3">
                            <Border Background="Transparent" CornerRadius="1.5" Width="3" />
                            <Track x:Name="PART_Track" IsDirectionReversed="True" Width="3">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Foreground}"
                                                        CornerRadius="1.5"
                                                        Width="3"
                                                        Opacity="0.6">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" Value="0.9" />
                                                                    <Setter Property="Width" Value="4" />
                                                                    <Setter Property="CornerRadius" Value="2" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 自定义 ScrollViewer 样式 -->
        <Style x:Key="CustomScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="3" />
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"
                                                    Content="{TemplateBinding Content}"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                                    CanContentScroll="{TemplateBinding CanContentScroll}"
                                                    Margin="0,0,1,0" />
                            <ScrollBar Grid.Column="1"
                                       x:Name="PART_VerticalScrollBar"
                                       Style="{StaticResource CustomScrollBarStyle}"
                                       Orientation="Vertical"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 圆润按钮样式模板 -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#415A71" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderThickness" Value="0.3" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A6B84" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#364D61" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 小按钮样式 -->
        <Style x:Key="SmallRoundButtonStyle" BasedOn="{StaticResource RoundButtonStyle}" TargetType="Button">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="10,5" />
        </Style>

        <!-- ComboBox 样式 -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#415A71" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                  HorizontalAlignment="Left"
                                                                  VerticalAlignment="Center"
                                                                  Margin="8,5" />
                                                <Path Grid.Column="1"
                                                      x:Name="Arrow"
                                                      Fill="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,5,25,5"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="8,5,25,5"
                                     Focusable="True"
                                     Background="Transparent"
                                     Foreground="Black"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}" />
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="#415A71"
                                            BorderThickness="1"
                                            BorderBrush="Transparent"
                                            CornerRadius="5">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"
                                                        KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                            </Trigger>
                            <Trigger SourceName="Popup" Property="AllowsTransparency" Value="true">
                                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="5" />
                                <Setter TargetName="DropDownBorder" Property="Margin" Value="0,2,0,0" />
                            </Trigger>
                            <Trigger Property="IsEditable" Value="true">
                                <Setter Property="IsTabStop" Value="false" />
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible" />
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <!-- ComboBoxItem 样式 -->
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Padding" Value="8,5" />
                    <Setter Property="FontFamily" Value="Microsoft YaHei" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Border"
                                        Background="{TemplateBinding Background}"
                                        BorderThickness="0"
                                        CornerRadius="3"
                                        Margin="2">
                                    <ContentPresenter HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"
                                                      Margin="{TemplateBinding Padding}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#4A6B84" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#364D61" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>

        <!-- TextBox 样式 -->
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#415A71" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧区域：计时和倒计时 -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 上半部分：计时功能 -->
            <Border Grid.Row="0" Background="#3D4451" CornerRadius="10" Padding="20" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="计时器" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"
                               HorizontalAlignment="Center" />

                    <!-- 计时显示 -->
                    <TextBlock x:Name="StopwatchDisplay" Text="00:00:00" FontSize="36" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,20" />

                    <!-- 计时控制按钮 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button x:Name="StartStopwatchBtn" Content="开始" Style="{StaticResource RoundButtonStyle}"
                                Click="ToggleStopwatch_Click" />
                        <Button x:Name="StopStopwatchBtn" Content="停止" Style="{StaticResource RoundButtonStyle}"
                                Click="StopStopwatch_Click" />
                        <Button x:Name="MiniStopwatchBtn" Width="80" Content="迷你模式"
                                Style="{StaticResource SmallRoundButtonStyle}" Click="MiniStopwatch_Click" />
                    </StackPanel>

                    <!-- 计时显示格式设置 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="显示格式：" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <ComboBox x:Name="StopwatchFormatCombo" Style="{StaticResource CustomComboBoxStyle}"
                                  SelectionChanged="StopwatchFormat_Changed" Width="120">
                            <ComboBoxItem Content="hh:mm:ss" IsSelected="True" />
                            <ComboBoxItem Content="mm:ss" />
                            <ComboBoxItem Content="ss" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 下半部分：倒计时功能 -->
            <Border Grid.Row="1" Background="#3D4451" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="倒计时器" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"
                               HorizontalAlignment="Center" />

                    <!-- 倒计时显示 -->
                    <TextBlock x:Name="CountdownDisplay" Text="00:00:00" FontSize="36" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,20" />

                    <!-- 倒计时设置 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="设置时间：" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <ComboBox x:Name="CountdownModeCombo" Style="{StaticResource CustomComboBoxStyle}"
                                  SelectionChanged="CountdownMode_Changed" Width="100" Margin="0,0,10,0" Height="30">
                            <ComboBoxItem Content="hh:mm:ss" IsSelected="True" />
                            <ComboBoxItem Content="mm:ss" />
                            <ComboBoxItem Content="ss" />
                        </ComboBox>

                        <StackPanel x:Name="CountdownInputPanel" Orientation="Horizontal">
                            <TextBox x:Name="HoursInput" Style="{StaticResource CustomTextBoxStyle}" Width="40"
                                     Text="0" TextAlignment="Center" GotFocus="CountdownInput_GotFocus" />
                            <TextBlock Text=":" VerticalAlignment="Center" Margin="3,0" />
                            <TextBox x:Name="MinutesInput" Style="{StaticResource CustomTextBoxStyle}" Width="40"
                                     Text="0" TextAlignment="Center" GotFocus="CountdownInput_GotFocus" />
                            <TextBlock Text=":" VerticalAlignment="Center" Margin="3,0" />
                            <TextBox x:Name="SecondsInput" Style="{StaticResource CustomTextBoxStyle}" Width="40"
                                     Text="30" TextAlignment="Center" GotFocus="CountdownInput_GotFocus" />
                        </StackPanel>

                        <Button x:Name="SetCountdownBtn" Content="设置" Style="{StaticResource SmallRoundButtonStyle}"
                                Click="SetCountdown_Click" Margin="10,0,0,0" />
                    </StackPanel>

                    <!-- 倒计时控制按钮 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button x:Name="StartCountdownBtn" Content="开始" Style="{StaticResource RoundButtonStyle}"
                                Click="ToggleCountdown_Click" />
                        <Button x:Name="StopCountdownBtn" Content="停止" Style="{StaticResource RoundButtonStyle}"
                                Click="StopCountdown_Click" />
                        <Button x:Name="MiniCountdownBtn" Content="迷你模式" Style="{StaticResource SmallRoundButtonStyle}"
                                Click="MiniCountdown_Click" />
                    </StackPanel>

                    <!-- 倒计时显示格式设置 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="显示格式：" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <ComboBox x:Name="CountdownFormatCombo" Style="{StaticResource CustomComboBoxStyle}"
                                  SelectionChanged="CountdownFormat_Changed" Width="120">
                            <ComboBoxItem Content="hh:mm:ss" IsSelected="True" />
                            <ComboBoxItem Content="mm:ss" />
                            <ComboBoxItem Content="ss" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 右侧区域：历史记录 -->
        <Border Grid.Column="1" Background="#3D4451" CornerRadius="10" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="计时历史" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"
                           HorizontalAlignment="Center" />

                <Button Grid.Row="1" x:Name="ClearHistoryBtn" Content="清空历史"
                        Style="{StaticResource SmallRoundButtonStyle}"
                        Click="ClearHistory_Click" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="14" />

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource CustomScrollViewerStyle}">
                    <StackPanel x:Name="HistoryPanel">
                        <!-- 历史记录项将在这里动态添加 -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>